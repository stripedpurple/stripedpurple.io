---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {}

const {href = '#main', ...props} = Astro.props as Props


---

<a
      href={href}
      {...props}
      class="focus:outline-none focus:ring-2 focus:ring-white p-4 bg-pink-600 text-center text-2xl -translate-y-full fixed focus:translate-y-0 translate-x-8 rounded-b-md motion-safe:transition-all duration-200 z-50"
      >Skip to main content</a
    >